[urgency_low]
    background = "#00000010" 
    foreground = "#ffffff"
    highlight = "#8f8f8f" 
    timeout = 5  # Diubah dari 1 ke 5

[urgency_normal]
    background = "#00000010"
    foreground = "#ffffff"
    highlight = "#8f8f8f" 
    timeout = 5  # Diubah dari 1 ke 5

[urgency_critical]
    background = "#ff5555"
    foreground = "#ffffff"
    frame_color = "#ff0000"
    timeout = 5

[battery_low_rule]
    summary = "*Battery*"
    # Membuat notifikasi tidak hilang sendiri
    timeout = 0
    # Mengabaikan klik agar tidak hilang saat diklik
    set_stack_tag = "battery_low"
    # Mengunci notifikasi agar tetap ada (opsional, tergantung versi dunst)
    msg_urgency = critical