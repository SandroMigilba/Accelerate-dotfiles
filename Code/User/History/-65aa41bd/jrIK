[urgency_low]
    background = "#00000010" 
    foreground = "#ffffff"
    highlight = "#8f8f8f" 
    timeout = 5

[urgency_normal]
    background = "#00000010"
    foreground = "#ffffff"
    highlight = "#8f8f8f" 
    timeout = 5

[urgency_critical]
    background = "#ff5555"
    foreground = "#ffffff"
    frame_color = "#ff0000"
    timeout = 5

[battery_low_rule]
    summary = "*Battery*"
    timeout = 0
    set_stack_tag = "battery_low"
    msg_urgency = critical