[global]
    icon_position = off
    
    # --- ANIMASI & TRANSPARANSI ---
    transparency = 10
    
    monitor = 0
    follow = mouse
    width = 250
    height = 110
    offset = 0x60
    origin = bottom-center
    
    frame_width = 2
    frame_color = "#5d00ff10" 
    corner_radius = 20
    
    font = JetBrainsMono Nerd Font Bold 10
    alignment = center
    padding = 15
    horizontal_padding = 15
    
    # --- PENGATURAN INDIKATOR ---
    show_indicators = false
    # Tambahkan ini untuk mencegah Dunst menambahkan teks indikator ke dalam body
    indicate_hidden = false
    
    # --- FORMAT TEKS TANPA KURUNG SIKU ---
    # Jika %b masih membawa kurung siku dari sistem (misal dari skrip volume),
    # kita pastikan formatnya bersih.
    format = "<b>%s</b>\n%p\n%b"
    
    progress_bar = true
    progress_bar_height = 8
    progress_bar_frame_width = 0
    progress_bar_corner_radius = 4
    progress_bar_background = "#00000010"
    progress_bar_foreground = "#8f8f8f"

