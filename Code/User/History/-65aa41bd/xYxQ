[global]
    icon_position = off
    
    # --- ANIMASI & TRANSPARANSI ---
    transparency = 10
    
    monitor = 0
    follow = mouse
    width = 250
    height = 110
    offset = 0x60
    origin = bottom-center
    
    frame_width = 2
    frame_color = "#5d00ff10" 
    corner_radius = 20
    
    font = JetBrainsMono Nerd Font Bold 10
    alignment = center
    padding = 15
    horizontal_padding = 15
    
    show_indicators = false
    indicate_hidden = false
    
    format = "<b>%s</b>\n%p\n%b"
    
    # --- PENGATURAN PROGRESS BAR (ABU-ABU) ---
    progress_bar = true
    progress_bar_height = 8
    progress_bar_frame_width = 0
    progress_bar_corner_radius = 4
    
    # Background bar: Hitam sangat transparan
    progress_bar_background = "#00000030" 
    
    # Foreground bar: Abu-abu solid
    progress_bar_foreground = "#888888" 

[urgency_low]
    background = "#00000010" 
    foreground = "#ffffff"
    # Menambahkan highlight agar warna bar tetap abu-abu di urgency rendah
    highlight = "#888888"
    timeout = 5

[urgency_normal]
    background = "#00000010"
    foreground = "#ffffff"
    highlight = "#888888"
    timeout = 5

[urgency_critical]
    background = "#ff5555"
    foreground = "#ffffff"
    frame_color = "#ff0000"
    # Di kondisi kritis, bar bisa tetap abu-abu atau ikut jadi putih
    highlight = "#ffffff"
    timeout = 5

[battery_low_rule]
    summary = "*Battery*"
    timeout = 0
    set_stack_tag = "battery_low"
    msg_urgency = critical