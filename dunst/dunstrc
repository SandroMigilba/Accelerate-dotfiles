[global]
    icon_position = off
    
    # --- ANIMASI & TRANSPARANSI ---
    transparency = 10
    
    monitor = 0
    follow = mouse
    width = 250
    # Fixed: Changed to tuple (min, max)
    height = (0, 110)
    # Fixed: Changed to tuple (x, y)
    offset = (0, 96)
    origin = bottom-center
    
    frame_width = 2
    frame_color = "#5d00ff10" 
    corner_radius = 20
    
    font = JetBrainsMono Nerd Font Bold 10
    alignment = center
    padding = 15
    horizontal_padding = 15
    
    show_indicators = false
    indicate_hidden = false
    
    format = "<b>%s</b>\n%p\n%b"
    
    # --- PENGATURAN PROGRESS BAR ---
    progress_bar = true
    progress_bar_height = 8
    progress_bar_frame_width = 0
    progress_bar_corner_radius = 4
   
[urgency_low]
    background = "#00000030" 
    foreground = "#ffffff"
    # This controls the progress bar color
    highlight = "#888888"
    timeout = 5

[urgency_normal]
    background = "#00000030"
    foreground = "#ffffff"
    highlight = "#888888"
    timeout = 5

[urgency_critical]
    background = "#ff5555"
    foreground = "#ffffff"
    frame_color = "#ff0000"
    # White bar for critical alerts
    highlight = "#ffffff"
    timeout = 0

[battery_low_rule]
    summary = "*Battery*"
    set_stack_tag = "battery_low"
    msg_urgency = critical
